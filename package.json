{
    "name": "http-docker-healthcheck",
    "version": "0.2.6",
    "description": "Http healthcheck for docker containers",
    "main": "app.js",
    "docker_image": "samuray/http-docker-healthcheck",
    "scripts": {
        "up": "ncu && ncu -u && rimraf ./package-lock.json && npm i",
        "ncu": "ncu",
        "pub": "npm run build && npm publish ./dist && rimraf ./dist",
        "build": "rimraf ./dist && npm run lint && tsc && json-key-remover && files-copier -e build",
        "start": "node ./dist/app.js --config ./config.toml",
        "start:dev": "ts-node ./src/app.ts --config ./config.toml",
        "lint": "eslint \"./src/**/*.{js,ts}\" --quiet --fix && tsc --noEmit",
        "lint:tests": "eslint \"./tests/**/*.{js,ts}\" --quiet --fix",
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "mocha -r ts-node/register --config ./tests/mocha.unit.config.json",
        "test:e2e": "start-server-and-test e2e:start-server http://localhost:3001/api/healthcheck e2e:start-tests",
        "e2e:start-server": "ts-node ./src/app.ts --config ./tests/e2e/config.toml",
        "e2e:start-tests": "mocha -r ts-node/register --config ./tests/mocha.e2e.config.json",
        "docker:build": "npm run build && files-copier -e docker:build && ts-node ./docker-build/build.ts",
        "docker:push:version": "ts-node ./docker-build/push_version.ts",
        "docker:push:latest": "ts-node ./docker-build/push_latest.ts",
        "docker:tag": "ts-node ./docker-build/tag.ts",
        "docker": "npm run docker:build && npm run docker:tag && npm run docker:push:version && npm run docker:push:latest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samurayii/http-docker-healthcheck.git"
    },
    "keywords": [
        "docker",
        "typescript",
        "healthcheck",
        "container"
    ],
    "author": "Nuzhnov A.A.",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/samurayii/http-docker-healthcheck/issues"
    },
    "homepage": "https://github.com/samurayii/http-docker-healthcheck.git#readme",
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/chai-http": "^4.2.0",
        "@types/chalk": "^2.2.0",
        "@types/dockerode": "^2.5.34",
        "@types/find-package-json": "^1.1.1",
        "@types/koa-helmet": "=5.2.0",
        "@types/koa-logger": "^3.1.1",
        "@types/koa-static": "^4.0.1",
        "@types/mime-types": "^2.1.0",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.2",
        "@types/socket.io": "^2.1.11",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "eslint": "^7.10.0",
        "files-copier": "^0.1.1",
        "json-key-remover": "^0.0.2",
        "mocha": "^8.1.3",
        "npm-check-updates": "^9.0.2",
        "rimraf": "^3.0.2",
        "start-server-and-test": "^1.11.4",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "ajv": "^6.12.5",
        "axios": "^0.20.0",
        "chalk": "^4.1.0",
        "commander": "^6.1.0",
        "di-ts-decorators": "0.0.3",
        "dockerode": "^3.2.1",
        "find-package-json": "^1.2.0",
        "handlebars": "^4.7.6",
        "json-from-default-schema": "^0.1.4",
        "jtomler": "^0.1.5",
        "koa-body": "^4.2.0",
        "koa-helmet": "=5.2.0",
        "koa-logger": "^3.2.1",
        "koa-static": "^5.0.0",
        "koa-ts-decorators": "0.0.8",
        "logger-flx": "^0.1.5",
        "mime-types": "^2.1.30",
        "uuid": "^8.3.1"
    },
    "remover": {
        "target": "./package.json",
        "destination": "./dist/package.json",
        "remove": [
            "remover",
            "devDependencies",
            "main",
            "scripts",
            "keywords",
            "homepage",
            "bugs",
            "copier"
        ]
    },
    "copier": {
        "build": {
            "rewrite": true,
            "copy": [
                {
                    "from": "./package-lock.json",
                    "to": "./dist/package-lock.json"
                },
                {
                    "from": "./src/http/templates",
                    "to": "./dist/http/templates"
                },
                {
                    "from": "./src/static",
                    "to": "./dist/static"
                }
            ]
        },
        "docker:build": {
            "rewrite": true,
            "copy": [
                {
                    "from": "./dist/lib",
                    "to": "./docker-build/app/lib"
                },
                {
                    "from": "./dist/http",
                    "to": "./docker-build/app/http"
                },
                {
                    "from": "./dist/app.js",
                    "to": "./docker-build/app/app.js"
                },
                {
                    "from": "./dist/docker-healthcheck.js",
                    "to": "./docker-build/app/docker-healthcheck.js"
                },
                {
                    "from": "./dist/package.json",
                    "to": "./docker-build/package.json"
                },
                {
                    "from": "./dist/package-lock.json",
                    "to": "./docker-build/package-lock.json"
                },
                {
                    "from": "./dist/static",
                    "to": "./docker-build/app/static"
                }
            ]
        }
    }
}
